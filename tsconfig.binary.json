{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist-binary",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "declarationDir": null,
    "allowImportingTsExtensions": false
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist",
    "dist-binary"
  ]
}