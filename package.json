{
  "name": "lsh-framework",
  "version": "1.2.0",
  "description": "Simple, cross-platform encrypted secrets manager with automatic sync and multi-environment support. Just run lsh init and start managing your secrets.",
  "main": "dist/app.js",
  "bin": {
    "lsh": "./dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gwicho38/lsh.git"
  },
  "homepage": "https://github.com/gwicho38/lsh#readme",
  "bugs": {
    "url": "https://github.com/gwicho38/lsh/issues"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "test:coverage": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage",
    "clean": "rm -rf ./build; rm -rf ./bin; rm -rf ./dist",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "secrets-manager",
    "secrets",
    "env-manager",
    "dotenv",
    "environment-variables",
    "encryption",
    "credential-management",
    "team-sync",
    "multi-environment",
    "devops",
    "security",
    "cli",
    "cross-platform"
  ],
  "engines": {
    "node": ">=20.18.0",
    "npm": ">=10.0.0"
  },
  "type": "module",
  "author": {
    "name": "gwicho38",
    "email": "luis@lefv.io"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    ".env.example",
    "package.json"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^10.0.1",
    "dotenv": "^16.4.5",
    "glob": "^10.3.12",
    "inquirer": "^9.2.12",
    "node-cron": "^3.0.3",
    "ora": "^8.0.1",
    "pg": "^8.16.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  }
}
